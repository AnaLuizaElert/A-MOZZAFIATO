<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    android:orientation="horizontal"
    tools:context=".pages.profile.ProfileContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/registerAppName"
            style="@style/amozzafiatoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/grayMozzafiato"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp">

                    <ImageView
                        android:id="@+id/profile_data_come_back_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/arrow_left" />

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/forumregular"
                        android:paddingEnd="20dp"
                        android:text="@string/profile_data_title"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/profile_data_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/file_edit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingStart="50dp">

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/category_input_name" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_data_card_name"
                            android:layout_width="298dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayMozzafiato"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="false">

                            <EditText
                                android:id="@+id/profile_data_input_name"
                                style="@style/StyleInputData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:text="@string/category_input_name"
                                tools:ignore="TouchTargetSizeCheck" />

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/category_input_image" />

                    <ImageView
                        android:id="@+id/profile_data_image"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp">

                    </ImageView>

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/category_input_country" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_data_card_country"
                            android:layout_width="298dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayMozzafiato"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="false">

                            <EditText
                                android:id="@+id/profile_data_input_country"
                                style="@style/StyleInputData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:text="@string/category_input_country"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/category_input_state" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_data_card_state"
                            android:layout_width="298dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayMozzafiato"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="false">

                            <EditText
                                android:id="@+id/profile_data_input_state"
                                style="@style/StyleInputData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:text="@string/category_input_state"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/category_input_email" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_data_card_email"
                            android:layout_width="298dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayMozzafiato"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="false">

                            <EditText
                                android:id="@+id/profile_data_input_email"
                                style="@style/StyleInputData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:text="@string/category_input_email"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/StyleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/category_input_password" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardPreventCornerOverlap="false">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_data_card_password"
                            android:layout_width="298dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayMozzafiato"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            app:cardPreventCornerOverlap="false">

                            <EditText
                                android:id="@+id/profile_data_input_password"
                                style="@style/StyleInputData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="15dp"
                                android:inputType="textPassword"
                                android:text="@string/category_input_password"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/profile_data_button_edit"
                        android:layout_width="300dp"
                        android:layout_height="42dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_border"
                        android:text="Edit"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>