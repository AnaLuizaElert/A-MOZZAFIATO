<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    tools:context=".pages.fragments.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/registerAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/forumregular"

                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="-20dp"

                    android:backgroundTint="@color/grayMozzafiato">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="35dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circularImageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/profile_image"
                            android:layout_gravity="center"
                            app:civ_border_color="@color/lightGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/forumregular"
                                android:textSize="30sp"
                                android:textAlignment="center"
                                android:text="Natalia Locsak"
                                android:textColor="@color/white">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/forumregular"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:text="Santa Catarina"
                                android:textColor="@color/white">

                            </TextView>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="70dp"
                    android:backgroundTint="@color/grayMozzafiato">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/forumregular"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Meus dados"
                        android:textColor="@color/white">
                    </TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/grayMozzafiato">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/forumregular"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Favoritos"
                        android:textColor="@color/white">
                    </TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="330dp"
                    android:layout_height="70dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/grayMozzafiato">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/forumregular"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Negociar automÃ³vel"
                        android:textColor="@color/white">
                    </TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/grayMozzafiato">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/forumregular"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:text="Entre em contato"
                        android:textColor="@color/white">
                    </TextView>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>