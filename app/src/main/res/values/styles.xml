<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:selectableItemBackground">@android:color/transparent</item>
    </style>

    <style name="StyleInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/grayInput</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="StyleTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundTint">@color/grayInput</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:fontFamily">@font/forumregular</item>
    </style>

    <style name="StyleButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blueMozzafiato</item>
        <item name="fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="StyleLink" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleImageCardCategories" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/rounded_border_white</item>
        <item name="android:backgroundTint">@color/lightGray</item>
    </style>

    <style name="StyleInputData" parent="Widget.MaterialComponents.TextView">
        <item name="android:backgroundTint">@color/grayMozzafiato</item>
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="paddingStart">30dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="StyleInputNegotiate" parent="Widget.MaterialComponents.TextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="StyleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleDescriptionCar" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StyleLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="amozzafiatoText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>

