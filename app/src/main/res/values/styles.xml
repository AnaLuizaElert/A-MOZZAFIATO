<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:selectableItemBackground">@android:color/transparent</item>
    </style>

    <style name="StyleInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/forumregular</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/grayInput</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="StyleTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundTint">@color/grayInput</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:fontFamily">@font/forumregular</item>
    </style>

    <style name="StyleButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blueMozzafiato</item>
        <item name="fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleLink" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/forumregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleImageCardCategories" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/rounded_border_img</item> <!-- ReferÃªncia ao arquivo rounded_border.xml -->
        <item name="android:backgroundTint">@color/lightGray</item>
    </style>

</resources>

