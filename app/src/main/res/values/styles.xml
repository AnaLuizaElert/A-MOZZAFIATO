<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:selectableItemBackground">@android:color/transparent</item>
    </style>

    <!--    Borda arredondada-->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/grayInput</item>
        <item name="hintTextColor">@color/black</item>
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="backgroundTint">@color/grayInput</item>
    </style>

    <style name="RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>

